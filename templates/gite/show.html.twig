{% extends 'base.html.twig' %}

{% block title %}Gite{% endblock %}

{% block body %}
    <h1>Gite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gite.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gite.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gite.description }}</td>
            </tr>
            <tr>
                <th>Animals_allowed</th>
                <td>{{ gite.animalsAllowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Price_animals</th>
                <td>{{ gite.priceAnimals }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ gite.adresse }}</td>
            </tr>
            <tr>
                <th>Postal_code</th>
                <td>{{ gite.postalCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ gite.city }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ gite.departement }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ gite.region }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gite_index') }}">back to list</a>

    <a href="{{ path('app_gite_edit', {'id': gite.id}) }}">edit</a>

    {{ include('gite/_delete_form.html.twig') }}
{% endblock %}
